# example : LOGOUT_WITH_TIMER=true
#LOGOUT_WITH_TIMER=

# LOGOUT_IN : The number of days
# example : LOGOUT_IN=1
#LOGOUT_IN=

# LOGOUT_ON_HOURS : The number of hours
# example : LOGOUT_ON_HOURS=9
#LOGOUT_ON_HOURS=

# LOGOUT_ON_MINUTES : The number of minutes
# example : LOGOUT_ON_MINUTES=55
#LOGOUT_ON_MINUTES=

CAS_ENABLED=false
CAS_BASE_URL=https://cas.example.com/cas
CAS_LOGIN_URL=https://cas.example.com/login
CAS_VALIDATE_URL=https://cas.example.com/cas/p3/serviceValidate

SAML_ENABLED=true
SAML_PROVIDER=
SAML_ENTRYPOINT=
SAML_ISSUER=
SAML_CERT=
SAML_IDPSLO_REDIRECTURL=
SAML_PRIVATE_KEYFILE=
SAML_PUBLIC_CERTFILE=
SAML_IDENTIFIER_FORMAT=
SAML_LOCAL_PROFILE_MATCH_ATTRIBUTE=
SAML_ATTRIBUTES=

# Wait spinner to use
WAIT_SPINNER=Bounce

